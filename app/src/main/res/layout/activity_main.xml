<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#d7263d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginLeft="150dp"
        android:text="ПОГОДА"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <EditText
        android:id="@+id/user_field"
        android:layout_width="344dp"
        android:minHeight="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#d7263d"
        android:textColor="#FFFFFF"
        android:text="Ханты-Мансийск"
        app:layout_constraintBottom_toTopOf="@+id/main_btn"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="24dp"
        android:text="Пожалуйста, обновите страницу"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <Button
        android:id="@+id/main_btn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="#d7263d"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="Обновить"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:backgroundTint="#d7263d"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="С"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_2"
        android:onClick="onClick2"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="68dp"
        android:backgroundTint="#B3B6B7"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="З"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_1"/>

    <Button
        android:id="@+id/btn_3"
        android:onClick="onClick3"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="68dp"
        android:backgroundTint="#B3B6B7"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="5"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>